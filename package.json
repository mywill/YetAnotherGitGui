{
  "name": "yagg",
  "version": "1.3.0",
  "description": "A Git GUI application built with Tauri",
  "packageManager": "pnpm@9.15.4",
  "author": "kd",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mywill/YetAnotherGitGui.git"
  },
  "bugs": {
    "url": "https://github.com/mywill/YetAnotherGitGui/issues"
  },
  "homepage": "https://github.com/mywill/YetAnotherGitGui#readme",
  "keywords": [
    "git",
    "gui",
    "tauri",
    "react",
    "typescript"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:install": "playwright install chromium",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "lint:rust": "cd src-tauri && cargo clippy -- -D warnings",
    "format:rust": "cd src-tauri && cargo fmt",
    "check": "bash scripts/check.sh"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-cli": "^2.0.0",
    "@tauri-apps/plugin-clipboard-manager": "^2.0.0",
    "@tauri-apps/plugin-process": "^2.0.0",
    "@tauri-apps/plugin-updater": "^2.0.0",
    "date-fns": "^4.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-window": "^2.2.7",
    "zustand": "^5.0.11"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "node scripts/update-versions.mjs ${nextRelease.version}"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "src-tauri/Cargo.toml",
            "src-tauri/tauri.conf.json"
          ],
          "message": "chore(release): ${nextRelease.version}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^19.0.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.40.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@tauri-apps/cli": "^2.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/react-window": "^2.0.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "jsdom": "^25.0.0",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^5.4.10",
    "vitest": "^2.0.0"
  }
}
