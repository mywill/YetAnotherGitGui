{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Yet Another Git Gui",
  "version": "1.4.0",
  "identifier": "com.yagg.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.png", "icons/icon.ico"],
    "macOS": {
      "minimumSystemVersion": "11.0"
    }
  },
  "app": {
    "windows": [
      {
        "title": "Yet Another Git Gui",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "cli": {
      "args": [
        {
          "name": "path",
          "index": 1,
          "takesValue": true,
          "required": false
        }
      ]
    },
    "updater": {
      "endpoints": [
        "https://github.com/mywill/YetAnotherGitGui/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhDMEU0RjYxQ0I0MTA1RTEKUldUaEJVSExZVThPakwxclZFRnFzOFZhL01kVThEN1NsL0wvbkZyM1F6OFZOOHE2cWMyNmt6K24K"
    }
  }
}
